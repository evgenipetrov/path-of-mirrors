# ===========================================================================
# Path of Mirrors - Backend Environment Configuration
# ===========================================================================
# This file contains example values for local development
# Copy this file to .env and adjust values as needed
# ===========================================================================

# ------------- app settings -------------
APP_NAME="Path of Mirrors"
APP_DESCRIPTION="Path of Exile economic intelligence platform"
APP_VERSION="0.1.0"
CONTACT_NAME="Path of Mirrors Team"
CONTACT_EMAIL="team@pathofmirrors.dev"
LICENSE_NAME="MIT"

# ------------- database -------------
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_SERVER="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="pathofmirrors"
POSTGRES_ASYNC_PREFIX="postgresql+asyncpg://"

# ------------- redis cache -------------
REDIS_CACHE_HOST="localhost"
REDIS_CACHE_PORT=6379

# ------------- redis queue (ARQ for background jobs) -------------
REDIS_QUEUE_HOST="localhost"
REDIS_QUEUE_PORT=6379

# ------------- environment -------------
ENVIRONMENT="local"

# ------------- logging -------------
LOG_LEVEL="INFO"
